<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.chenfuduo.networkingmodels" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SendAndManageRequestActivity"
            android:label="@string/title_activity_send_and_manage_request" >
        </activity>
        <activity
            android:name=".MyAsyncTaskActivity"
            android:label="@string/title_activity_my_async_task" />
        <activity
            android:name=".MyRottenTomatoesActivity"
            android:label="@string/title_activity_my_rotten_tomatoes"></activity>
        <activity
            android:name=".BoxOfficeDetailActivity"
            android:label="@string/title_activity_box_office_detail"></activity>
        <activity
            android:name=".MyVolleyBasicUsageActivity"
            android:label="@string/title_activity_my_volley_basic_usage"></activity>
        <activity
            android:name=".MyImageLoaderActivity"
            android:label="@string/title_activity_my_image_loader"></activity>
    </application>

</manifest>
